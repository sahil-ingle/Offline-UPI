<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Search bar with profile icon at the top -->
    <RelativeLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile icon -->
        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ellipse_3"
            android:onClick="onMenuClick"/>

        <!-- Search bar (assuming EditText for simplicity) -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="326dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/menu"
            android:background="@drawable/rounded_search_bar_background"
            android:hint="Search"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHint="#8A000000" />

    </RelativeLayout>

    <!-- Image below the search bar -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/image_2"
        android:layout_marginTop="50dp"
        android:layout_below="@id/search_bar_layout" />

    <!-- 2*2 grid of icons with text below them -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:columnCount="2"
        android:padding="20dp"
        android:rowCount="2">

        <!-- Icon 1 -->
        <LinearLayout
            android:id="@+id/toPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:onClick="onPhoneClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/image_1" />

            <TextView
                android:onClick="onPhoneClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Pay using phone" />
        </LinearLayout>

        <!-- Icon 2 -->
        <LinearLayout
            android:id="@+id/toUPI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:onClick="onUPIClick"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/image_2" />

            <TextView
                android:onClick="onUPIClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="pay using UPI" />
        </LinearLayout>

        <!-- Icon 3 -->
        <LinearLayout
            android:id="@+id/toBank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:onClick="onBankClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/image_3" />

            <TextView
                android:onClick="onBankClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="pay using bank account" />
        </LinearLayout>

        <!-- Icon 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:onClick="onScannerClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/image_4" />

            <TextView
                android:onClick="onScannerClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Payusing scanner" />
        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/UPI_id_showing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:text="Enter UPI ID"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/checkBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UPI_id_showing"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="0dp"
        android:onClick="onCheckBalanceClick"
        android:text="@string/check_balance"
        android:textAlignment="center"
        android:textSize="25dp" />

        <Button
        android:id="@+id/changeSimBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="onChangeSimClick"
        android:text="@string/sim"
        />


</RelativeLayout>

</ScrollView>



